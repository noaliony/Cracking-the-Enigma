<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginController">
   <children>
      <Label alignment="TOP_CENTER" text="Login" underline="true" />
      <HBox alignment="TOP_CENTER" spacing="15.0">
         <children>
            <Label alignment="TOP_CENTER" text="User Name:" />
            <TextField fx:id="userNameTextField" alignment="TOP_CENTER" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Button fx:id="loginButton" alignment="TOP_CENTER" mnemonicParsing="false" text="Login" />
      <Label fx:id="errorMessageLabel" textFill="#fd1818" />
   </children>
</VBox>
