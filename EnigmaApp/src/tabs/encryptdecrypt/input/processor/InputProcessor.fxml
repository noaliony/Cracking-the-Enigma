<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.ToggleSwitch?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tabs.encryptdecrypt.input.processor.InputProcessorController">
   <children>
      <Label alignment="CENTER" text="Encrypt \ Dycrypt" underline="true" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Full Text" />
            <ToggleSwitch fx:id="selectionModeToggleSwitch" alignment="CENTER" />
            <Label text="Key By Key" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="inputMessageTextField" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" />
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
               <Image url="/resources/images/Arrow.png" />
               </image>
            </ImageView>
            <TextField fx:id="isEncodedMessageTextField" alignment="CENTER" layoutX="10.0" layoutY="10.0" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" />
         </children>
      </HBox>
      <StackPane fx:id="encryptDecryptPane">
         <children>
            <fx:include fx:id="fullTextMode" source="fulltext/mode/FullTextMode.fxml" />
            <fx:include fx:id="keyByKeyMode" source="keybykey/mode/KeyByKeyMode.fxml" />
         </children>
      </StackPane>
   </children>
</VBox>
