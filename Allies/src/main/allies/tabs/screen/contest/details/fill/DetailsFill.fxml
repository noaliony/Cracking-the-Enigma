<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.allies.tabs.screen.contest.details.fill.DetailsFillController">
   <children>
      <HBox alignment="TOP_CENTER" spacing="15.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" minWidth="-Infinity" prefWidth="80.0" text="Task Size:" />
            <TextField fx:id="taskSizeTextField" alignment="TOP_CENTER" />
         </children>
      </HBox>
      <Button fx:id="readyButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#readyButtonAction" text="Ready" />
      <HBox spacing="15.0">
         <children>
            <Label text="Is Ready:" />
            <Label fx:id="isReadyValueLabel" text="Not Yet!" />
         </children>
      </HBox>
   </children>
</VBox>
